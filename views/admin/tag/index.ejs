<%- include('../common/header') -%>
<%- include('../common/nav') -%>
<aside class="right-side">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel">
                    <header class="panel-heading">
                        标签列表
                    </header>
                    <div class="panel-body table-responsive">
                        <div class="box-tools m-b-15 clearfix">
                           <a type="button" class="btn btn-primary pull-right" href="/admin/addTag">添加标签</a>
                           <a type="button" class="btn btn-primary pull-right" href="/admin/taglist/1">标签回收站</a>
                        </div>
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>序号</th>
                                    <th>标签名称</th>
                                    <th>操作</th>
                                </tr>
                                <% for(var i = 0;i < tagList.length;i++){ %>
                                <tr>
                                    <td><%= (i+1) %></td>
                                    <td><%= tagList[i].tagname %></td>
                                    <td>
                                        <a href="/admin/editTag/<%= tagList[i]._id %>">修改</a>
                                        <a href="/admin/deleteTag/<%= tagList[i]._id%>">删除</a>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
</aside>
<%- include('../common/footer') -%>