<%- include('../common/header') -%>
    <%- include('../common/nav') -%>
        <aside class="right-side">
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="panel">
                            <header class="panel-heading">
                                文章列表
                            </header>
                            <div class="panel-body table-responsive">
                                <div class="box-tools m-b-15 clearfix">
                                    <a type="button" class="btn btn-primary pull-right" href="/admin/addArticle">添加文章</a>
                                    <a type="button" class="btn btn-primary pull-right" href="/admin/articleList/1">文章回收站</a>
                                </div>
                                <table class="table table-hover">
                                    <tbody>
                                        <tr>
                                            <th>标题</th>
                                            <th>作者</th>
                                            <th>推荐属性</th>
                                            <th>分类</th>
                                            <th>文章内容</th>
                                            <th>阅读数</th>
                                            <th>Tag标签</th>
                                            <th>支持数</th>
                                            <th>创建时间</th>
                                            <th>更新时间</th>
                                            <th>操作</th>
                                        </tr>
                                        <% for(var i = 0;i < art.length;i++){ %>
                                        <tr>
                                            <td><%= art[i].title%></td>
                                            <td><%= art[i].author%></td>
                                            <td>
                                                <% for(var a = 0;a < art[i].attribute.length;a++){ %>
                                                    <span><%= art[i].attribute[a].attributename %></span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% for(var a = 0;a < art[i].type.length;a++){ %>
                                                    <span><%= art[i].type[a].typename %></span>
                                                <% } %>
                                            </td>
                                            <td><%= art[i].content %></td>
                                            <td><%= art[i].read %></td>
                                            <td>
                                                <% for(var a = 0;a < art[i].Tag.length;a++){ %>
                                                    <span><%= art[i].Tag[a].tagname %></span>
                                                <% } %>
                                            </td>
                                            <td><%= art[i].support%></td>
                                            <td><%= art[i].createtime%></td>
                                            <td><%= art[i].updatetime%></td>
                                            <td>
                                                <a href="/admin/editArticle/<%= art[i]._id%>">修改</a>
                                                <a href="/admin/deleteArticle/<%= art[i]._id%>">删除</a>
                                            </td>
                                        </tr>
                                        
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                </div>
            </section>
            <!-- /.content -->
        </aside>
        <%- include('../common/footer') -%>