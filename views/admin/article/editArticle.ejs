<%- include('../common/header') -%>
    <%- include('../common/nav') -%>
        <aside class="right-side">
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <section class="panel">
                            <header class="panel-heading">
                                修改文章
                            </header>
                            <div class="panel-body">
                                <form class="form-horizontal tasi-form" method="post">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">标题</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="title" value="<%= article.title%>">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">推荐属性</label>
                                        <div class="col-sm-10">

                                            <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" class="attribute" value="1" name="attribute" <%if(article.attribute[0]==1){%> checked <%}%>>[H:热点信息]
                                                    </label>
                                                    <label>
                                                        <input type="checkbox" class="attribute" value="2" name="attribute" <%if(article.attribute[1]==2){%> checked <%}%>>[P：轮播图]
                                                    </label>
                                                    <label>
                                                        <input type="checkbox" class="attribute" value="3"  name="attribute" <%if(article.attribute[2]==3){%> checked <%}%>>[R:推荐]
                                                    </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">作者</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="author" class="form-control round-input" value="<%= article.author%>">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">分类</label>
                                        <div class="col-sm-10">
                                                <select name="type" class="form-control input-sm">
                                                    <!-- 自定义一个格式：-1表示用户没有选择文章类型-->
                                                    <option value="-1">请选择文章类型</option>
                                                    <% for(var i = 0;i < type.length;i++){ %>
                                                    <option value="<%= type[i].id %>" <%if(article.type==type[i].id){%> selected <%}%>><%= type[i].typename %></option>
                                                    <% } %>
                                                </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <!--访客浏览人数-->
                                        <label class="col-sm-2 col-sm-2 control-label">阅读人数</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" name="read" type="text" placeholder="Disabled input here..." value="<%= article.read%>">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">Tag标签</label>
                                        <div class="col-sm-10">
                                            
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">文章内容</label>
                                        <div class="col-sm-10">
                                            <textarea class="form-control" name="content" rows="10"><%= article.content%></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button type="submit" class="btn btn-danger">确定提交</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>





                    </div>
                </div>

            </section>
            <!-- /.content -->
        </aside>
        <%- include('../common/footer') -%>