<%- include('../common/header') -%>
    <%- include('../common/nav') -%>
        <aside class="right-side">
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <section class="panel">
                            <header class="panel-heading">
                                修改文章
                            </header>
                            <div class="panel-body">
                                <form class="form-horizontal tasi-form" method="post">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">标题</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="title" value="<%= article.title%>">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">推荐属性</label>
                                        <div class="col-sm-10">
                                            <div class="checkbox">
                                                <% for(var j = 0;j < article.attribute.length;j++){ %>
                                                    <% var a = "'"+article.attribute[j]+"'"%>
                                                <% for(var i = 0;i < attribute.length;i++){ %>
                                                    <% var b = "'"+attribute[i]._id+"'"%>
                                                    <%if(a==b){%>
                                                    <label>
                                                        <input type="checkbox" class="attribute" value="<%= attribute[i]._id %>" name="attribute"
                                                        checked
                                                        >
                                                        <%= attribute[i].attributename %>
                                                    </label>
                                                    <% continue;}%>
                                                <% } }%>  
                                            </div> 
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">作者</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="author" class="form-control round-input" value="<%= article.author%>">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">分类</label>
                                        <div class="col-sm-10">
                                            <div class="checkbox">
                                            <% for(var i = 0;i < type.length;i++){ %>
                                                <label>
                                                    <input type="checkbox" class="type" value="<%= type[i]._id %>" name="type">
                                                    <%= type[i].typename %>
                                                </label>
                                            <% } %>  
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <!--访客浏览人数-->
                                        <label class="col-sm-2 col-sm-2 control-label">阅读人数</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" name="read" type="text" placeholder="Disabled input here..." value="<%= article.read%>">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">Tag标签</label>
                                        <div class="col-sm-10">
                                            <div class="checkbox">
                                                <% for(var i = 0;i < tag.length;i++){ %>
                                                    <label>
                                                        <input type="checkbox" class="Tag" value="<%= tag[i]._id %>" name="Tag">
                                                        <%= tag[i].tagname %>
                                                    </label>
                                                <% } %>
                                            </div> 
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 col-sm-2 control-label">文章内容</label>
                                        <div class="col-sm-10">
                                            <textarea class="form-control" name="content" rows="10"><%= article.content%></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button type="submit" class="btn btn-danger">确定提交</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>





                    </div>
                </div>

            </section>
            <!-- /.content -->
        </aside>
        <%- include('../common/footer') -%>